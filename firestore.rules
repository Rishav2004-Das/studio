
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ“ Users Collection
    match /users/{userIdInPath} {

      // âœ… Read: user can read their own data OR if requester is admin
      allow read: if request.auth != null &&
        (
          request.auth.uid == userIdInPath ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
        );

      // âœ… Update:
      // - User can update their own document (except isAdmin)
      // - Admins can only update tokenBalance field
      allow update: if request.auth != null &&
        (
          (
            request.auth.uid == userIdInPath &&
            !request.resource.data.diff(resource.data).affectedKeys().hasAny(['isAdmin'])
          ) ||
          (
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true &&
            request.resource.data.diff(resource.data).affectedKeys().hasOnly(['tokenBalance'])
          )
        );

      // âœ… Create: user can create their own doc (isAdmin must not be true)
      allow create: if request.auth != null &&
        request.auth.uid == userIdInPath &&
        (
          request.resource.data.isAdmin == null ||
          request.resource.data.isAdmin == false
        );

      // âœ… List: only admins can list users
      allow list: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // âœ… Delete: only the user can delete their own document
      allow delete: if request.auth != null &&
        request.auth.uid == userIdInPath;
    }

    // ğŸ“ Submissions Collection
    match /submissions/{submissionId} {

      // âœ… Read: owner of submission OR admin
      allow read: if request.auth != null &&
        (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
        );

      // âœ… Update: only admins can update
      allow update: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // âœ… Create: user can create their own submissions
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;

      // âœ… Delete: owner OR admin can delete
      allow delete: if request.auth != null &&
        (
          resource.data.userId == request.auth.uid ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true
        );

      // âœ… List: only admins can list submissions
      allow list: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // ğŸ“ Redemption Requests Collection
    match /redemptionRequests/{requestId} {

      // âœ… Read, List, Update, Delete: only admins can manage requests
      allow read, update, delete, list: if request.auth != null &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;

      // âœ… Create: user can create their own redemption request
      allow create: if request.auth != null &&
        request.resource.data.userId == request.auth.uid;
    }
  }
}
